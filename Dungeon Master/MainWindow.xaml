<Window x:Class="Dungeon_Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeon_Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="style" TargetType="Button">
            <Setter Property="Background" Value="DarkRed"/>
            <Setter Property ="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="/Dungeon Master;component/#GothicRus"/>
            <Style.Triggers>
                <EventTrigger Property="IsPressed" Value="True">
                    
                        
                  
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Canvas Background="Black">
        <Label Content="DUNGEON MASTER" FontSize="50" FontFamily="/Dungeon Master;component/#GothicRus" Canvas.Left="138" Canvas.Top="63" Foreground="DarkRed"/>
        <Button Content="Начать игру" Height="33" Width="201" Canvas.Left="278" Canvas.Top="172" Style="{StaticResource ResourceKey=style}"></Button>
    </Canvas>
</Window>
