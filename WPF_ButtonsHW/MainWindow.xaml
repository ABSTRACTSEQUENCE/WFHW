<Window x:Class="WPF_ButtonsHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ButtonsHW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Grid.Column="0" >
            <Button Content="Navy" Foreground="Navy" Margin="2.0"></Button>
            <Button Content="Blue" Foreground="Blue" Margin="2.0"></Button>
            <Button Content="Aqua" Foreground="Aqua" Margin="2.0"></Button>
            <Button Content="Teal" Foreground="Teal" Margin="2.0"></Button>
            <Button Content="Olive" Foreground="Olive" Margin="2.0"></Button>
            <Button Content="Green" Foreground="Green" Margin="2.0"></Button>
            <Button Content="Lime" Foreground="Lime" Margin="2.0"></Button>
            <Button Content="Yellow" Foreground="Yellow" Margin="2.0"></Button>
        </UniformGrid>
    </Grid>
</Window>
